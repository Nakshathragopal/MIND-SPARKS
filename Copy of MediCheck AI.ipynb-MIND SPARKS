language: str = \"en\") -> Tuple[str, str, str, str]:\n","    \"\"\"Main prescription analysis function\"\"\"\n","    try:\n","        # Step 1: Privacy-compliant data handling\n","        anonymized_text = MedicalDataPrivacy.anonymize_data(text)\n","        session_id = MedicalDataPrivacy.hash_identifier(text + str(datetime.now()))\n","\n","        # Step 2: IBM Granite NLP extraction\n","        extraction_result = granite_nlp.extract_prescription_data(anonymized_text)\n","\n","        # Step 3: Fraud/Forgery detection\n","        authenticity_result = granite_nlp.analyze_prescription_authenticity(anonymized_text, {})\n","\n","        # Step 4: Drug validation\n","        medications = extraction_result[\"medications\"]\n","        validation_results = []\n","\n","        for med in medications:\n","            validation = medical_db.validate_drug(med)\n","            validation_results.append(validation)\n","\n","        # Step 5: Drug interaction checking\n","        interaction_result = medical_db.check_drug_interactions(medications)\n","\n","        # Step 6: Age-specific dosage recommendations\n","        dosage_recommendations = []\n","        for i, med in enumerate(medications):\n","            if extraction_result[\"dosages\"] and i < len(extraction_result[\"dosages\"]):\n","                dosage_rec = medical_db.get_age_appropriate_dosage(\n","                    med, patient_age, extraction_result[\"dosages\"][i]\n","                )\n","                dosage_recommendations.append(dosage_rec)\n","\n","        # Step 7: Generate real-time alerts\n","        alerts = alert_system.check_critical_interactions(medications, patient_age)\n","\n","        # Compile results\n","        analysis_summary = f\"\"\"\n","## üîç {translate_text('prescription_analysis', language)}\n","**Session ID:** {session_id}\n","**Analysis Time:** {datetime.now().strftime('%Y-%m-%d %H:%M:%S')}\n","\n","### üìã Extracted Information:\n","- **Medications:** {', '.join(medications) if medications else 'None detected'}\n","- **Dosages:** {', '.join(extraction_result['dosages']) if extraction_result['dosages'] else 'None specified'}\n","- **Frequencies:** {', '.join([str(f) for f in extraction_result['frequencies']]) if extraction_result['frequencies'] else 'None specified'}\n","\n","### ‚úÖ Drug Validation:\n","\"\"\"\n","\n","        for med, validation in zip(medications, validation_results):\n","            if validation[\"is_valid\"]:\n","                analysis_summary += f\"- **{med}:** ‚úÖ Verified in FDA database\\n\"\n","            else:\n","                analysis_summary += f\"- **{med}:** ‚ùå Not found in database\\n\"\n","                if validation.get(\"suggested_matches\"):\n","                    analysis_summary += f\"  - Suggested: {', '.join(validation['suggested_matches'])}\\n\"\n","\n","        # Authenticity check\n","        auth_status = \"‚úÖ AUTHENTIC\" if authenticity_result[\"is_authentic\"] else \"‚ö†Ô∏è SUSPICIOUS\"\n","        authenticity_summary = f\"\"\"\n","## üõ°Ô∏è Fraud Detection Analysis\n","**Status:** {auth_status}\n","**Confidence:** {authenticity_result['confidence_score']:.1%}\n","**Risk Level:** {authenticity_result['risk_level']}\n","\n","### Fraud Indicators:\n","\"\"\"\n","        if authenticity_result[\"fraud_indicators\"]:\n","            for indicator in authenticity_result[\"fraud_indicators\"]:\n","                authenticity_summary += f\"- ‚ö†Ô∏è {indicator}\\n\"\n","        else:\n","            authenticity_summary += \"- ‚úÖ No fraud indicators detected\\n\"\n","\n","        # Drug interactions\n","        interaction_summary = f\"\"\"\n","## ‚ö†Ô∏è Drug Interaction Analysis\n","**Risk Level:** {interaction_result['risk_level']}\n","**Total Interactions:** {interaction_result['total_interactions']}\n","\n","\"\"\"\n","        if interaction_result[\"interactions\"]:\n","            for interaction in interaction_result[\"interactions\"]:\n","                interaction_summary += f\"- **{interaction['drug1']} + {interaction['drug2']}:** {interaction['severity']} - {interaction['description']}\\n\"\n","        else:\n","            interaction_summary += \"‚úÖ No significant interactions detected\\n\"\n","\n","        # Real-time alerts\n","        alerts_summary = f\"\"\"\n","## üö® Real-Time Alerts\n","**Active Alerts:** {len(alerts)}\n","\n","\"\"\"\n","        if alerts:\n","            for alert in alerts:\n","                severity_emoji = \"üî¥\" if alert[\"severity\"] == \"CRITICAL\" else \"üü°\"\n","                alerts_summary += f\"{severity_emoji} **{alert['type']}:** {alert['message']}\\n\"\n","        else:\n","            alerts_summary += \"‚úÖ No critical alerts\\n\"\n","\n","        return analysis_summary, authenticity_summary, interaction_summary, alerts_summary\n","\n","    except Exception as e:\n","        logger.error(f\"Error in prescription analysis: {str(e)}\")\n","        return f\"‚ùå Analysis Error: {str(e)}\", \"\", \"\", \"\"\n","\n","def process_prescription_image(image, patient_age: str, language: str = \"en\"):\n","    \"\"\"Process uploaded prescription image\"\"\"\n","    if image is None:\n","        return \"Please upload a prescription image first.\", \"\", \"\", \"\"\n","\n","    try:\n","        # OCR processing\n","        extracted_text = ocr_processor.process_prescription_image(str(image))\n","\n","        # Analyze extracted text\n","        return analyze_prescription_text(extracted_text, patient_age, language)\n","\n","    except Exception as e:\n","        logger.error(f\"Error processing prescription image: {str(e)}\")\n","        return f\"‚ùå Image Processing Error: {str(e)}\", \"\", \"\", \"\"\n","\n","def get_alternative_medications(drug_list: str, patient_conditions: str) -> str:\n","    \"\"\"Get alternative medication suggestions\"\"\"\n","    try:\n","        drugs = [drug.strip() for drug in drug_list.split(',')]\n","        alternatives_summary = \"## üíä Alternative Medication Suggestions\\n\\n\"\n","\n","        for drug in drugs:\n","            validation = medical_db.validate_drug(drug)\n","            if validation[\"is_valid\"] and \"alternatives\" in validation[\"drug_info\"]:\n","                alternatives = validation[\"drug_info\"][\"alternatives\"]\n","                alternatives_summary += f\"**{drug.title()}:**\\n\"\n","                for alt in alternatives:\n","                    alternatives_summary += f\"- {alt.title()}\\n\"\n","                alternatives_summary += \"\\n\"\n","            else:\n","                alternatives_summary += f\"**{drug.title()}:** No alternatives found in database\\n\\n\"\n","\n","        return alternatives_summary\n","\n","    except Exception as e:\n","        return f\"‚ùå Error getting alternatives: {str(e)}\"\n","\n","# Create Gradio Interface\n","def create_gradio_app():\n","    with gr.Blocks(\n","        title=\"AI Medical Prescription Verification System\",\n","        theme=gr.themes.Soft(),\n","        css=\"\"\"\n","        .container { max-width: 1200px; margin: auto; }\n","        .header { text-align: center; background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);\n","                 color: white; padding: 2rem; border-radius: 10px; margin-bottom: 2rem; }\n","        .alert-box { background: #fee; border: 2px solid #f00; padding: 1rem; border-radius: 5px; }\n","        .success-box { background: #efe; border: 2px solid #0f0; padding: 1rem; border-radius: 5px; }\n","        \"\"\"\n","    ) as app:\n","\n","        gr.HTML(\"\"\"\n","        <div class=\"header\">\n","            <h1>üè• AI Medical Prescription Verification System</h1>\n","            <h3>Powered by IBM Granite 3.2-2B & Advanced Medical AI</h3>\n","            <p>Secure ‚Ä¢ HIPAA Compliant ‚Ä¢ Real-time Analysis ‚Ä¢ Multi-language Support</p>\n","        </div>\n","        \"\"\")\n","\n","        with gr.Row():\n","            with gr.Column():\n","                language_selector = gr.Dropdown(\n","                    choices=list(LANGUAGES.values()),\n","                    value=\"English\",\n","                    label=\"üåê Select Language / ‡§≠‡§æ‡§∑‡§æ ‡§ö‡•Å‡§®‡•á‡§Ç / ‡ÆÆ‡Øä‡Æ¥‡Æø‡ÆØ‡Øà‡Æ§‡Øç ‡Æ§‡Øá‡Æ∞‡Øç‡Æ®‡Øç‡Æ§‡ØÜ‡Æü‡ØÅ‡Æï‡Øç‡Æï‡Æµ‡ØÅ‡ÆÆ‡Øç\",\n","                    interactive=True\n","                )\n","\n","                patient_age = gr.Dropdown(\n","                    choices=[\"infant\", \"child\", \"adolescent\", \"adult\", \"elderly\"],\n","                    value=\"adult\",\n","                    label=\"üë§ Patient Age Group\",\n","                    interactive=True\n","                )\n","\n","        with gr.Tabs():\n","            # Tab 1: OCR Prescription Analysis\n","            with gr.TabItem(\"üì∑ OCR Prescription Scanner\"):\n","                with gr.Row():\n","                    with gr.Column():\n","                        prescription_image = gr.Image(\n","                            label=\"Upload Prescription Image\",\n","                            type=\"filepath\"\n","                        )\n","\n","                        scan_btn = gr.Button(\n","                            \"üîç Analyze Prescription\",\n","                            variant=\"primary\",\n","                            size=\"lg\"\n","                        )\n","\n","                    with gr.Column():\n","                        gr.Markdown(\"### üéØ System Features:\")\n","                        gr.Markdown(\"\"\"\n","                        - **OCR Text Extraction** - Extract text from prescription images\n","                        - **IBM Granite NLP** - Advanced medical text analysis\n","                        - **Drug Validation** - Verify against FDA databases\n","                        - **Interaction Detection** - Real-time safety alerts\n","                        - **Fraud Detection** - AI-powered authenticity verification\n","                        - **HIPAA Compliance** - Secure data handling\n","                        \"\"\")\n","\n","                # Output sections\n","                with gr.Row():\n","                    with gr.Column():\n","                        analysis_output = gr.Markdown(label=\"Analysis Results\")\n","                    with gr.Column():\n","                        authenticity_output = gr.Markdown(label=\"Fraud Detection\")\n","\n","                with gr.Row():\n","                    with gr.Column():\n","                        interaction_output = gr.Markdown(label=\"Drug Interactions\")\n","                    with gr.Column():\n","                        alerts_output = gr.Markdown(label=\"Real-time Alerts\")\n","\n","            # Tab 2: Text Input Analysis\n","            with gr.TabItem(\"üìù Text Analysis\"):\n","                with gr.Row():\n","                    with gr.Column():\n","                        prescription_text = gr.Textbox(\n","                            label=\"Enter Prescription Text\",\n","                            placeholder=\"Paste prescription text here or describe medications...\",\n","                            lines=8\n","                        )\n","\n","                        analyze_text_btn = gr.Button(\n","                            \"üî¨ Analyze Text\",\n","                            variant=\"primary\"\n","                        )\n","\n","                    with gr.Column():\n","                        text_analysis_output = gr.Markdown(label=\"Analysis Results\")\n","                        text_authenticity_output = gr.Markdown(label=\"Authenticity Check\")\n","\n","                with gr.Row():\n","                    text_interaction_output = gr.Markdown(label=\"Drug Interactions\")\n","                    text_alerts_output = gr.Markdown(label=\"Safety Alerts\")\n","\n","            # Tab 3: Alternative Medications\n","            with gr.TabItem(\"üíä Alternative Medications\"):\n","                with gr.Row():\n","                    with gr.Co