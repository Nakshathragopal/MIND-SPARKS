atterns = [\n","            r'\\b(once|twice|thrice|1x|2x|3x|4x)\\s*(daily|per day|a day)\\b',\n","            r'\\bevery\\s*(\\d+)\\s*(hours?|hrs?)\\b',\n","            r'\\b(morning|evening|night|bedtime)\\b'\n","        ]\n","\n","        for pattern in med_patterns:\n","            medications.extend(re.findall(pattern, text, re.IGNORECASE))\n","\n","        for pattern in dosage_patterns:\n","            matches = re.findall(pattern, text, re.IGNORECASE)\n","            dosages.extend([f\"{match[0]} {match[1]}\" for match in matches])\n","\n","        for pattern in frequency_patterns:\n","            frequencies.extend(re.findall(pattern, text, re.IGNORECASE))\n","\n","        return {\n","            \"medications\": list(set(medications)),\n","            \"dosages\": list(set(dosages)),\n","            \"frequencies\": list(set(frequencies)),\n","            \"extracted_text\": MedicalDataPrivacy.anonymize_data(text)\n","        }\n","\n","    def analyze_prescription_authenticity(self, text: str, metadata: Dict) -> Dict:\n","        \"\"\"Detect potential fraud/forgery using AI analysis\"\"\"\n","        fraud_indicators = []\n","        confidence_score = 0.95\n","\n","        # Check for common fraud indicators\n","        if len(re.findall(r'\\b(oxycodone|fentanyl|morphine|adderall|xanax)\\b', text, re.IGNORECASE)) > 0:\n","            fraud_indicators.append(\"High-risk controlled substance detected\")\n","            confidence_score -= 0.2\n","\n","        if len(text) < 50:\n","            fraud_indicators.append(\"Prescription text unusually short\")\n","            confidence_score -= 0.1\n","\n","        if not re.search(r'\\b(Dr\\.|Doctor|MD|Physician)\\b', text, re.IGNORECASE):\n","            fraud_indicators.append(\"Missing physician identification\")\n","            confidence_score -= 0.15\n","\n","        # Check for unusual dosages\n","        dosage_matches = re.findall(r'(\\d+)\\s*mg', text, re.IGNORECASE)\n","        if any(int(dose) > 1000 for dose in dosage_matches if dose.isdigit()):\n","            fraud_indicators.append(\"Unusually high dosage detected\")\n","            confidence_score -= 0.2\n","\n","        return {\n","            \"is_authentic\": confidence_score > 0.7,\n","            \"confidence_score\": max(0.1, confidence_score),\n","            \"fraud_indicators\": fraud_indicators,\n","            \"risk_level\": \"HIGH\" if confidence_score < 0.5 else \"MEDIUM\" if confidence_score < 0.8 else \"LOW\"\n","        }\n","\n","class MedicalDatabase:\n","    \"\"\"Verified medical database for drug validation\"\"\"\n","\n","    def __init__(self):\n","        # Simulated verified medical database\n","        self.drug_database = {\n","            \"amoxicillin\": {\n","                \"category\": \"antibiotic\",\n","                \"max_daily_dose\": {\"adult\": \"3000mg\", \"child\": \"90mg/kg\"},\n","                \"interactions\": [\"warfarin\", \"methotrexate\"],\n","                \"contraindications\": [\"penicillin allergy\"],\n","                \"alternatives\": [\"azithromycin\", \"cephalexin\"]\n","            },\n","            \"ibuprofen\": {\n","                \"category\": \"nsaid\",\n","                \"max_daily_dose\": {\"adult\": \"3200mg\", \"child\": \"40mg/kg\"},\n","                \"interactions\": [\"warfarin\", \"lisinopril\", \"metformin\"],\n","                \"contraindications\": [\"kidney disease\", \"heart failure\"],\n","                \"alternatives\": [\"acetaminophen\", \"naproxen\"]\n","            },\n","            \"metformin\": {\n","                \"category\": \"antidiabetic\",\n","                \"max_daily_dose\": {\"adult\": \"2000mg\", \"child\": \"not_recommended\"},\n","                \"interactions\": [\"alcohol\", \"ibuprofen\"],\n","                \"contraindications\": [\"kidney disease\", \"liver disease\"],\n","                \"alternatives\": [\"glipizide\", \"insulin\"]\n","            },\n","            \"