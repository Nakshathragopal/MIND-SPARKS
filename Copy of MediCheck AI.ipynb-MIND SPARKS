    def check_drug_interactions(self, drugs: List[str]) -> Dict:\n","        \"\"\"Check for dangerous drug interactions\"\"\"\n","        interactions = []\n","        risk_level = \"LOW\"\n","\n","        for i, drug1 in enumerate(drugs):\n","            drug1_info = self.validate_drug(drug1)\n","            if drug1_info[\"is_valid\"]:\n","                drug1_interactions = drug1_info[\"drug_info\"].get(\"interactions\", [])\n","\n","                for j, drug2 in enumerate(drugs[i+1:], i+1):\n","                    if drug2.lower() in drug1_interactions:\n","                        interaction = {\n","                            \"drug1\": drug1,\n","                            \"drug2\": drug2,\n","                            \"severity\": \"HIGH\",\n","                            \"description\": f\"Known interaction between {drug1} and {drug2}\"\n","                        }\n","                        interactions.append(interaction)\n","                        risk_level = \"HIGH\"\n","\n","        return {\n","            \"interactions\": interactions,\n","            \"risk_level\": risk_level,\n","            \"total_interactions\": len(interactions)\n","        }\n","\n","    def get_age_appropriate_dosage(self, drug: str, age_group: str, standard_dose: str) -> Dict:\n","        \"\"\"Calculate age-appropriate dosage\"\"\"\n","        factor = self.age_dosage_factors.get(age_group, 1.0)\n","\n","        # Extract numeric dose\n","        dose_match = re.search(r'(\\d+(?:\\.\\d+)?)', standard_dose)\n","        if dose_match:\n","            base_dose = float(dose_match.group(1))\n","            adjusted_dose = base_dose * factor\n","            unit = standard_dose.replace(dose_match.group(1), \"\").strip()\n","\n","            return {\n","                \"original_dose\": standard_dose,\n","                \"adjusted_dose\": f\"{adjusted_dose:.1f}{unit}\",\n","                \"age_group\": age_group,\n","                \"adjustment_factor\": fac